<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#111111"
    android:layout_marginTop="5dp"
    android:id="@+id/audio_item">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_ing"
        android:src="@mipmap/ic_launcher_round"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>
    <!-- BotÃ£o abaixo acrescentado -->
    <!-- apagar musica -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File name"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/ColorAccent"
        android:id="@+id/music_file_name"
        app:layout_constraintStart_toEndOf="@+id/music_ing"
        app:layout_constraintTop_toTopOf="@+id/music_ing"
        app:layout_constraintBottom_toBottomOf="@+id/music_ing"/>

</androidx.constraintlayout.widget.ConstraintLayout>
