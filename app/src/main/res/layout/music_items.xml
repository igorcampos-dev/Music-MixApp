<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:layout_marginTop="1dp"
    android:id="@+id/audio_item">

    <ImageView
        android:id="@+id/music_ing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_round"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <TextView
        android:id="@+id/music_file_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="Nome da mÃºsica"
        android:textColor="@color/ColorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/music_ing"
        app:layout_constraintEnd_toStartOf="@+id/menuMore"
        app:layout_constraintStart_toEndOf="@+id/music_ing"
        app:layout_constraintTop_toTopOf="@+id/music_ing" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/menuMore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/baseline_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/music_ing" />

</androidx.constraintlayout.widget.ConstraintLayout>
